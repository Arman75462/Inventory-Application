<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/global.css" />
    <title>Grocery Store</title>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>

    <a href="/products/product/<%=productDetails.id%>"
      ><button>&lt;&lt; Return to <%=productDetails.name%></button></a
    >

    <form method="POST" action="/products/edit/<%=productDetails.id%>">
      <h1><%= productDetails.name %></h1>
      <p><%= productDetails.emoji %></p>
      <p>Category: <%= productDetails.category %></p>

      <label for="newProductPrice">Price:</label>
      <input
        type="number"
        id="newProductPrice"
        name="newProductPrice"
        min="0"
        max="1000"
        step="0.01"
        value="<%= productDetails.price %>"
        required
      />

      <label for="newProductDescription">Description:</label>
      <textarea
        id="newProductDescription"
        name="newProductDescription"
        maxlength="100"
        required
      >
 <%= productDetails.description %></textarea
      >

      <label for="newProductQuantity">Quantity:</label>
      <input
        type="number"
        id="newProductQuantity"
        name="newProductQuantity"
        value="<%= productDetails.quantity %>"
        step="1"
        min="1"
        max="10000"
        required
      />

      <%- include("../partials/errors.ejs") %>

      <button type="submit">Submit edits</button>
    </form>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
